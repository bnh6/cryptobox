{
    "appId": "dev.bnh6.cryptobox",
    "productName": "cryptobox",
    "copyright": "Copyright Â© 2021 ${author}",
    "directories": {
        "output": "release"
    },
    "mac": {
        "icon": "static/resources/cryptobox.icns",
        "target": ["dmg"],
        "type": "distribution",
        "category":"Utilities",
        "darkModeSupport": "true"
    },
    "dmg": {
        "backgroundColor": "#3f4247",
        "title": "${productName} ${version}",
        "artifactName": "${productName}-OSX-${version}",
        "icon": "static/resources/cryptobox.icns"
    },
    "linux":{
        "icon": "static/resources/cryptobox.png",
        "category": "Utility",
        "executableName": "${productName}-LINUX-${version}",
        "synopsis": "bla bla",
        "description": "bla bla bla bla bla bla",
        "target": [
            {
                "target": "deb",
                "arch": [ "x64", "ia32" ],
            },
            {
                "target": "rpm",
                "arch": [ "x64", "ia32" ],
            },
            {
                "target": "tar.gz",
                "arch": [ "x64", "ia32" ]
            }
        ]
    },
    "win": {
        "icon": "static/resources/cryptobox.ico",
        "legalTrademarks": "Cryptobox by BNH6",
        "publisherName": "BNH6",
        "target": [
            {
              "target": "portable",
              "arch": [ "x64", "ia32" ],
              "artifactName": "${productName}-WIN_Portable-${version}"
            },
            {
                "target": "msi",
                "arch": [ "x64", "ia32" ],
                "artifactName": "${productName}-WIN-${version}"
            }
        ]
    }
}
