{
    "appId": "org.bnh6.cryptobox",
    "productName": "CryptoBox",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
        "output": "electron-builder"
    },
    "asar": true,
    "mac": {
        "icon": "static/resources/cloud-enc.icns",
        "target": ["dmg","zip"],
        "darkModeSupport": true,
        "type": "distribution"
    },
    "linux":{
        "icon": "static/resources/cloud-enc.icns",
        "category": "Utility",
        "target": ["deb","rpm", "apk", "snap", "freebsd", "tar.gz"]
    },
    "dmg": {
        "backgroundColor": "#3f4247",
        "title": "${productName} ${version}",
        "icon": "static/resources/cloud-enc.icns"
    }
}